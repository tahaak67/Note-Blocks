<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNote">

    <EditText
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titleText" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.505"
            android:hint="العنوان"/>
    <EditText
            android:layout_width="213dp"
            android:layout_height="122dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/noteText"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="الملاحظة"/>
    <Button
            android:text="تم"
            android:layout_width="120dp"
            android:layout_height="79dp"
            android:id="@+id/button"
            android:background="@drawable/btn_shape_capsule"
            android:textColor="@drawable/btn_txt_selector"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addNote"/>
</android.support.constraint.ConstraintLayout>