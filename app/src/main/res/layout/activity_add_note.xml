<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNote">

    <EditText
            android:layout_width="377dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titleText"
            android:hint="العنوان" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="367dp"
            android:layout_height="334dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/noteText"
            android:hint="الملاحظة"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="تم"
            android:layout_width="120dp"
            android:layout_height="79dp"
            android:id="@+id/button"
            android:background="@drawable/background_layout"
            android:textColor="@drawable/btn_txt_selector"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addNote"/>
</android.support.constraint.ConstraintLayout>