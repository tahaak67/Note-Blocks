<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="@color/gray">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_layout"
            android:layout_margin="8dp">
        <TextView
                android:text="العنوان"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titleTextView" android:textSize="24sp"
                android:textColor="@android:color/black"/>
        <TextView
                android:text="الملاحظة"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/noteTextView"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/delete_icon"
                    android:id="@+id/delIV" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/edit_icon"
                    android:id="@+id/editIV" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>